Public Sub calc_HT()

  Calc_Tva()
  tx = (1 + (Val(Utils.cpoint(Tva)) / 100))
  Pvht = Format$(Val(Utils.cpoint(Artpu)) / tx, nbdec)
  Mtva = Val(Utils.cpoint(Artpu)) - Val(Utils.cpoint(Pvht))

End

Public Sub Calc_TTC()

  Calc_Tva()
  Pvttc.Text = Format$(Val(Pvht) + (Val(Pvht) * Tva / 100), Nbdec)
  Artpu = Pvttc.Text
  Mtva = Val(Utils.cpoint(Artpu)) - Val(Utils.cpoint(Pvht))

End

