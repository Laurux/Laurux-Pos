        If Start.son Then
          Music.Play
        Endif
        Try Message.Warning("Saisie impossible! Le stock de ce produit est égal ou inférieur à zéro.")
        bt = 1
      Else
        If IsNull(Remise.text) Then Remise.text = "0,00"
        Materiel = Rarts!art_mat
        Famille = Rarts!art_fam
        Nbd = Rarts!art_nbd
