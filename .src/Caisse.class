Public Sub Maj_Paiements(Reg As String, smnt As String, sqte As String)

  Dim rReglt As Result
  Dim TabReglt As String
  Dim MntReglt As String = "0"
  Dim QteReglt As String = "0"

  TabReglt = "Fiches_Reglts" & Ncaisse
  If Reg = "Q" Then
    Reg = "N"
    rReglt = Utils.db.Exec(" select * from " & TabReglt & " where type = &1 and date = &2", reg, Format$(Now, "dd-mm-yyyy"))
    If rReglt.Available Then
      MntReglt = rReglt!montant
      MntReglt = Val(Utils.cpoint(MntReglt)) - Val(Utils.cpoint(smnt))
      Utils.db.Exec("UPdate  " & TabReglt & "  SET montant = &1 WHERE type = &2", MntReglt, Reg)
    Endif
  Else
    rReglt = Utils.db.Exec(" select * from " & TabReglt & " where type = &1 and date = &2", reg, Format$(Now, "dd-mm-yyyy"))
    If rReglt.Available Then
      MntReglt = rReglt!montant
      MntReglt = Val(Utils.cpoint(MntReglt)) + Val(Utils.cpoint(smnt))
      QteReglt = rReglt!qte
      QteReglt = Val(utils.cpoint(QteReglt)) + Val(Utils.cpoint(sqte))
      Utils.db.Exec("UPdate  " & TabReglt & "  SET montant = &1, qte = &2 WHERE type = &3 and date = &4", MntReglt, QteReglt, Reg, Format$(Now, "dd-mm-yyyy"))
    Else
      If clicompte = 0 Then
        Utils.db.Exec("INSERT INTO " & TabReglt & " (type, montant, qte, date) VALUES (&1, &2, &3, &4)", Reg, smnt, sqte, Format$(Now, "dd-mm-yyyy"))
      Else
        Utils.db.Exec("INSERT INTO " & TabReglt & " (type, montant, qte, date) VALUES (&1, &2, &3, &4)", "M", smnt, "1", Format$(Now, "dd-mm-yyyy"))
      Endif
    Endif
  Endif

End

