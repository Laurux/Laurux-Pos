Public Sub Defaut_Facture()

  Dim Tabe As String
  Dim rntck As Result
  Dim Posx As Integer = 4
  Dim Posy As Integer = 2
  Dim Filename As String
  Dim sline As String
  Dim i As Integer = 0

  Tabe = "Fiches_LigTickets" & Ncaisse
  Filename = User.home & "/Ticket.pdf"
  pdf = New Cfacture("p", "mm", "A4")
  pdf.Open()
  pdf.AliasNbPages()
  pdf.newPage()
  For Each sline In Split(Entetet, "\n")
    'Inc i
    $iSpc.add(sline)
  Next
  i = 0
  Posy = 12
  If clicompte <> 1 Then
    For Each sline In Split(Nmc4.Text, "\n")
      'Inc i
      $iSpc2.Add(sline)
    Next
  Else
    For Each sline In Split(Entetcli, "\n")
      'Inc i
      $iSpc2.Add(sline)
    Next
  Endif
  i = 0
  pdf.Logo2("fac") 'On imprime le logo
  pdf.Entete2($iSpc[i], Posx, Posy, "B")
  Posy += 5
  For i = 1 To 10
    If Left$($iSpc[i], 5) = "-----" Then
      Posy += 8
      pdf.Lines(Posy)
    Else
      Try pdf.Entete($iSpc[i], Posx, Posy, "")
      If i = 3 Then
        Try pdf.Entete2($iSpc2[i - 3], Posx + 90, Posy, "B")
      Else
        Try pdf.Entete2($iSpc2[i - 3], Posx + 90, Posy, "")
      Endif
    Endif
    Posy += 5
  Next
  Posy += 6
  pdf.Level2F(posy)
  Posy += 10
  rntck = Utils.db.Exec(" select * from " & Tabe & " where numero = &1 order by lind", Nticket.Text)
  If rntck.Available Then
    Repeat
      If rntck!type <> "K"
        If Left$(rntck!intitule, 5) = "-----" Then
          'Posy += 5
          pdf.Lines2(Posy)
          Posy += 2
        Else
          pdf.Level4(rntck!code, rntck!intitule, rntck!montant, rntck!qte, PosY)
          Posy += 5
        Endif
      Endif
    Until rntck.MoveNext()
  Endif
  pdf.Output(Filename, False)
  If Clicompte = "1" Then
    Impression.Facture(Filename, Nbf)
  Else
    Impression.Facture(Filename, 1)
  Endif
  Nmc4.clear
  Frame7.visible = False
  Try Kill Filename
  Cart.SetFocus
  Zone = "Article"
Catch
  If Start.son Then
    If Start.son Then
      Music.Play
    Endif
  Endif
  Try message.Error(Error.Text & " " & Error.where)

End

