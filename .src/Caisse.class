Public Sub Form_Close()

  bt = 1

  If LigTk.count > 0 Then
    If message.Question("Vous avez un ticket en cours. Voulez-vous quitter ?", "Oui", "Non") = 1 Then
      bt = 1
    Else
      bt = 0
    Endif
  Endif
  If bt = 1 Then
    Try sport.Close
    Try sport2.Close
    If Exist(User.home & "/Ticket.ps") Then Kill User.home & "/Ticket.ps"
    Me.CLOSE
  Else
    Stop Event
    Cart.SetFocus
    Zone = "Article"
  Endif
  
  'Fermeture du socket pour communication avec afficheur BA6X
  If bAffUSB Then
    Close #BA6X
  Endif
  

End

Public Sub Ent_tk()

  Entete.text = Adr & "\n" & Siret & " \n" & Tvaintra & "\n" & Tel & "\n"
  Entete.Text = Entete.text & "Caissier(e) : " & $Caissiere
  If Imprimante = "Défaut" Then
    Entete.text = Entete.text & Space$(45) & "Bonjour" & "\n"
  Else
    Entete.text = Entete.text & "Bonjour "
  Endif
  If Imprimante = "Défaut" Then
    Entete.Text = Entete.Text & Pointille & Pointille & Left$(Pointille, 26) & "\n"
  Else
    If Typeimp = "6000III" Then Entete.Text = Entete.Text & Pointille & "\n"
    If Typeimp = "Tmu950" Then Entete.Text = Entete.Text & Left$(Pointille, 26) & "\n"
  Endif
  rResult = Utils.db.Exec("SELECT * FROM " & Cbase.Table("TabCaisses") & " where code = &1", Ncaisse)
  If IsNull(rResult!dntk) Then
    Ntk = Ncaisse & "000001"
  Else
    Ntk = Val(Right$(rResult!dntk, Len(rResult!dntk) - 1)) + 1
    Ntk = Format$(Ntk, "000000")
    Ntk = Ncaisse & Ntk
  Endif
  Ecole = rResult!ecole
  If Imprimante = "Défaut" Then
    Entete.Text = Entete.Text & "Ticket No " & Ntk & Space$(40) & datetk '& "\n"
  Else
    Entete.Text = Entete.Text & "Ticket No " & Ntk & Space$(3) & datetk & "\n"
  Endif
Catch

  If Start.son Then
    Music.Play
  Endif
  Try message.Error(Error.Text & " " & Error.where)

End

