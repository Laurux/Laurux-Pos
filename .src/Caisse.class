Public Sub Ligtk_Delete()

  Dim Block, $Block, Tligne As String
  Dim numl As Integer
  Dim pu, quantite As String
  Dim tot As String
  Dim Rem, Trem As Boolean = False
  Dim Art As Boolean = False

  If ColumnView1.count = 0 Then
    If message.Question("Voulez-vous supprimer cette ligne ?\nLes lignes de remise sur total seront également supprimées.", "Oui", "Non") = 1 Then
      Ligtk.MoveFirst()
      Repeat
        If LigTk.Item.Selected = True Then
          Try Block = LigTk.Current[8]
          Repeat
            Try LigTk.item.Selected = True
            If Not Error Then
              If LigTk.Current[8] = Block Then
                LigTk.current.delete
                Ligtk.MoveFirst()
                Try LigTk.Item.Selected = True
              Else
                Try Ligtk.MoveNext()
              Endif
            Endif
            Try $Block = LigTk.Item[8]
            If Error Then Break
          Until LigTk.Item[8] > Block
          Break
        Endif
      Until Ligtk.MoveNext()

      RenameLigne()

      'On recalcule le total du ticket
      LigTk.MoveFirst
      TotalTk.Text = 0
      Totalht = 0
      rremT = 0
      For numl = 1 To LigTk.count
        Try LigTk.Item.Selected = True
        If Not Error Then
          If LigTk.Item[5] = "A" Then
            Tligne = LigTk.Item[5]
            Pu = LigTk.Current[3]
            quantite = LigTk.Current[4]
            Tot = LigTk.Current[6]
            rem = False
            LigTk.MoveNext()
            Try LigTk.Item.Selected = True
            If Error Then
              TotalTk.Text = Format$(Val(Utils.cpoint(TotalTk.Text)) + (Val(Utils.cpoint(pu)) * Val(Utils.cpoint(quantite))), "0.00")
              Totalht = Val(Utils.cpoint(Totalht)) + Val(Utils.cpoint(Tot))
              Totalht = Format$(Totalht, "0.00")
            Endif
          Endif
          Try LigTk.Item.Selected = True
          If Not Error Then
            If LigTk.Item[5] = "M" And Not Trem Or If LigTk.Item[5] = "S" And Not Trem Then
              Pu = LigTk.Current[3]
              quantite = LigTk.Current[4]
              Tot = LigTk.Current[6]
              Rem = True
              TotalTk.Text = Format$(Val(Utils.cpoint(TotalTk.Text)) + (Val(Utils.cpoint(pu)) * Val(Utils.cpoint(quantite))), "0.00")
              Totalht = Val(Utils.cpoint(Totalht)) + Val(Utils.cpoint(Tot))
              Totalht = Format$(Totalht, "0.00")
            Else
              If LigTk.Item[5] = "A" Or If LigTk.Item[5] = "T" And Not rem Then
                If LigTk.Item[5] = "A" Then
                  TotalTk.Text = Format$(Val(Utils.cpoint(TotalTk.Text)) + (Val(Utils.cpoint(pu)) * Val(Utils.cpoint(quantite))), "0.00")
                Else
                  Pu = LigTk.Current[3]
                  TotalTk.Text = Format$(Val(Utils.cpoint(TotalTk.Text)) + Val(Utils.cpoint(pu)), "0.00")
                Endif
                Totalht = Val(Utils.cpoint(Totalht)) + Val(Utils.cpoint(Tot))
                Totalht = Format$(Totalht, "0.00")
              Endif
            Endif
            Tligne = LigTk.Item[5]
            Pu = LigTk.Current[3]
            quantite = LigTk.Current[4]
            Tot = LigTk.Current[6]
            LigTk.MoveNext()
            Try LigTk.Item.Selected = True
            If Error And If Tligne = "A" Then
              TotalTk.Text = Format$(Val(Utils.cpoint(TotalTk.Text)) + (Val(Utils.cpoint(pu)) * Val(Utils.cpoint(quantite))), "0.00")
              Totalht = Val(Utils.cpoint(Totalht)) + Val(Utils.cpoint(Tot))
              Totalht = Format$(Totalht, "0.00")
            Endif

          Endif
        Endif
      Next
      'On supprime les lignes de remise sur total
      LigTk.MoveFirst
      For numl = 1 To LigTk.count
        Try LigTk.Item.Selected = True
        If Not Error Then
          If LigTk.Item[5] = "MT" Then
            LigTk.Current.Delete
            Numl = 1
            LigTk.MoveFirst
            RemTot.clear
          Else
            LigTk.MoveNext()
          Endif
        Endif
      Next
    Endif
  Else
    Message.Warning("Suppression impossible, un règlement a été saisi !")
  Endif
Catch

End

