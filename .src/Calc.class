Public Sub pourcentage_Click()
  
  With utils
    Stop Event
    Box1.text = Rep(Box1.text)
    If op = "+" Then
      Box1.Text = Str(a + (a * Val(.cpoint(Box1.Text)) / 100))
    Endif
    If op = "-" Then
      Box1.Text = Str(a + (a * Val(.cpoint(Box1.Text)) / 100))
    Endif
    Box1.Text = Prct(Box1.text)
    Resultat = Box1.text
  End With
Catch
  
End

