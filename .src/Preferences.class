Public Sub Init_Nbase()

  Dim elements As Variant

  Nbase.Clear
  For Each elements In Utils.db.Databases
    Lig = elements.name
    If Left$(Lig, 6) = "Laurux" Then
      If Len(lig) > 6 Then Nbase.Add(Lig)
    Endif
  Next

End

