Public Sub Logo2(type As String)
  
  Dim $logo As String
  
  If Settings["/logo"] Then
    Try $Logo = Settings["/ilogo"]
    If Not Error Then
      If Not IsNull($Logo) Then
        If type = "fac" Then
          Me.Image($Logo, 136, 10, 40, 40)
        Else
          Me.Image($Logo, 100, 10, 40, 40) 
        Endif
      Endif
    Endif
  Endif
  
End

Public Sub Logo()
  
  Dim $logo As String
  Dim iFormat As Integer
  Dim hImage As Image
  Dim L As Integer = 80
  Dim h As Integer = 40
  Dim L2 As Integer
  Dim h2 As Integer
  Dim x As Integer = 110
  Dim Y As Integer = 8
  
  If Settings["/Soc" & Start.Soc & "/glogo"] Then
    Try $Logo = Settings["/Soc" & Start.Soc & "/Logo"]
    Try hImage = Image.Load(Settings["/Soc" & Start.Soc & "/Logo"])
    iFormat = hImage.Width / hImage.Height
    L2 = hImage.Width * iFormat
    h2 = hImage.Height * iFormat
    If L2 > L Then
      L2 = L
      h2 = h
    Endif
    If Not Error Then
      If Not IsNull($Logo) Then
        Me.Image($Logo, X + L2 / hImage.Width, Y + h2 / hImage.Height, L2, h2)
      Endif
    Endif
  Endif
  
End

'Bas de page
Public Function BasPage()
  
  Me.SetY(-10)
  Me.SetFont("Helvetica", "I", 8)
  Me.Cell(206, 6, "Page " & Me.PageNo() & "/{nb}" & " - " & Format$(Now, "dd/mm/yyyy hh.nn") & " - Impression demandée par " & User.Name, False, 0, "C", False)
  
End
