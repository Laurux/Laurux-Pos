'Lignes de detail
Public Sub Level1(Code As String, Intitule As String, prix As String, qte As String, PosX As Integer, PosY As Integer, Typel As String)
  
  Me.SetXY(PosX, Posy)
  Me.SetFont("Helvetica", "", 8)
  Me.cell(27, 4, Code, False, 0, "L", False)
  
  If typel <> "K" Then intitule = Left$(intitule, 40)
  If typel = "K" Then
    Me.cell(55, 4, intitule, False, 0, "L", False)
  Else
    If typel = "TA" Then
      Me.cell(55, 4, intitule, False, 0, "L", False)
    Else
      Me.cell(55, 4, intitule, False, 0, "L", False)
    Endif
    Me.cell(8, 4, prix, False, 0, "R", False)
    Me.cell(8, 4, qte, False, 0, "R", False)
  Endif
  
End

