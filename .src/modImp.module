'---------------------------- Logo ----------------------------------------
Private Sub Draw_Image(img As Image)
  
  Dim Postx As Integer
  Dim Posty As Integer
  
  Postx = 3700 - (img.Width / 2)
  Posty = 600 - (img.Height / 2)
  Draw.Image(img, Postx, Posty)
  
End

